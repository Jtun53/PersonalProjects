import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

import au.com.bytecode.opencsv.CSVReader;

/**
 * 
 * @author John Tungul
 * This class will be used to read in a CSV file
 * to create transaction objects 
 */
public class OpenCSV{
	CSVReader aReader;
	/**
	 * 
	 * @param fileName
	 * OpenCSV constructor takes in a csv filename
	 */
	public OpenCSV(String fileName){
		try {
			CSVReader aReader = new CSVReader(new FileReader(fileName));
			String[] nextLine;
			nextLine = aReader.readNext();
			System.out.println(nextLine[0]);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	String[] CsvContents(){
		String[] nextLine = null;
	    try {
			while ((nextLine = aReader.readNext()) != null);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	    return nextLine;
	}
}
